        <script>
            let mode = '', answer = '', answeredTrue = 0, answeredFalse = 0
            function callSwal(status = 'error', title = '', position = 'center', backdrop = true, width = '200px', text = '', timer = 800) {
                Swal.fire({
                    position: position,
                    icon: status,
                    title: title,
                    showConfirmButton: false,
                    timer: timer,
                    backdrop: backdrop,
                    width: width,
                    text: text
                })
            }

            function refreshCounter(){
                $("#true-counter").text(answeredTrue)
                $("#false-counter").text(answeredFalse)
            }

            function falseAnswer() {
                callSwal('error', 'Jawaban Salah!', 'top', false)
                answeredFalse += 1
                refreshCounter()
            }

            function trueAnswer(selectedMode, editClass) {
                $(editClass).attr('style', 'color:black')
                $("#select-mode option[value='"+selectedMode+"']").attr("disabled","true").addClass('bg-secondary text-white')
                $("#select-mode").prop('selectedIndex', 0)
                $('#answer').val('')
                callSwal('success', 'Jawaban Benar!', 'top', false)
                answeredTrue += 1
                refreshCounter()
            }

            $(document).ready(()=>{
                // Prevent right click
                // $(document).bind("contextmenu",function(e){
                //     return false;
                // });

                // Submit Checking
                $('.btn').click(()=>{
                    mode = $('#select-mode').val()
                    answer = $('#answer').val().toUpperCase()
                    console.log(mode, answer);
                    switch (mode) {
                        case 'mode-1':
                            if(answer === "TAKJIL"){
                                trueAnswer('mode-1', '.wr-1')
                            }else{
                                falseAnswer()
                            }
                            break;
                            
                        case 'mode-2-me':
                            if(answer === "TADHRUS"){
                                trueAnswer('mode-2-me', '.wr-2-me')
                            }else{
                                falseAnswer()
                            }
                            break;

                        case 'mode-2-md':
                            if(answer === "TARAWEH"){
                                trueAnswer('mode-2-md', '.wr-2-md')
                            }else{
                                falseAnswer()
                            }
                            break;

                        case 'mode-3':
                            if(answer === "EIDALFITR"){
                                trueAnswer('mode-3', '.wr-3')
                            }else{
                                falseAnswer()
                            }
                            break;

                        case 'mode-4':
                            if(answer === "RAMADHA" || answer === "RAMADHAN"){
                                trueAnswer('mode-4', '.wr-4')
                            }else{
                                falseAnswer()
                            }
                            break;

                        case 'mode-5':
                            if(answer === "HAUS"){
                                trueAnswer('mode-5', '.wr-5')
                            }else{
                                falseAnswer()
                            }
                            break;

                        case 'mode-6':
                            if(answer === "SAHUR"){
                                trueAnswer('mode-6', '.wr-6')
                            }else{
                                falseAnswer()
                            }
                            break;

                        default:
                            callSwal('question', "What's Happening?", 'center')
                            break;
                    }
                    if(answeredTrue == 7){
                        callSwal('success', "Congratulations!", 'center', true, '300px', "You've answered all the question.", 1500)
                    }
                })
            })
